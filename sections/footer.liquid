<footer class="footer full-width">
  <div class="footer__container">
    <div class="footer__top">
      <div class="footer__brand">
        <a href="{{ routes.root_url }}" class="footer__logo" aria-label="{{ shop.name }}">
          <img
            src="{{ 'zengaz-logo.png' | asset_url }}"
            alt="{{ shop.name }}"
            width="140"
            height="40"
            loading="lazy">
        </a>
        {% if section.settings.description != blank %}
          <p class="footer__description">{{ section.settings.description }}</p>
        {% endif %}
      </div>

      <div class="footer__links-grid">
        {% if linklists['footer-menu'].links.size > 0 %}
          {% for link in linklists['footer-menu'].links %}
            {% if link.links.size > 0 %}
              {% for child_link in link.links %}
                <a href="{{ child_link.url }}" class="footer__link">{{ child_link.title }}</a>
              {% endfor %}
            {% else %}
              <a href="{{ link.url }}" class="footer__link">{{ link.title }}</a>
            {% endif %}
          {% endfor %}
        {% else %}
          <a href="/pages/shop" class="footer__link">Shop</a>
          <a href="/pages/range" class="footer__link">Range</a>
          <a href="/pages/wholesale" class="footer__link">Wholesale</a>
          <a href="/pages/contact" class="footer__link">Contact</a>
        {% endif %}
      </div>
    </div>

    <div class="footer__bottom">
      <div class="footer__copyright">
        <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ section.settings.copyright_text | default: 'All rights reserved.' }}</p>
      </div>

      <div class="footer__bottom-right">
        {% if section.settings.show_social_icons %}
          <div class="footer__social">
            {% if section.settings.tiktok_url != blank %}
              <a href="{{ section.settings.tiktok_url }}" class="footer__social-link" aria-label="TikTok" rel="noopener" target="_blank">
                <svg viewBox="0 0 24 24" aria-hidden="true"><path fill="currentColor" d="M21 8.5c-2.2-.4-4.1-1.7-5.1-3.6V17c0 3.9-3.2 7-7.1 7S1.7 20.9 1.7 17c0-3.8 3-6.9 6.7-7v3.8c-1.6.1-2.9 1.4-2.9 3.1 0 1.7 1.4 3.1 3.2 3.1s3.2-1.4 3.2-3.1V0h3.8c.4 2.5 2.3 4.5 4.6 5v3.5z"/></svg>
              </a>
            {% endif %}
            {% if section.settings.instagram_url != blank %}
              <a href="{{ section.settings.instagram_url }}" class="footer__social-link" aria-label="Instagram" rel="noopener" target="_blank">
                <svg viewBox="0 0 24 24" aria-hidden="true"><path fill="currentColor" d="M7 2h10a5 5 0 0 1 5 5v10a5 5 0 0 1-5 5H7a5 5 0 0 1-5-5V7a5 5 0 0 1 5-5zm0 2a3 3 0 0 0-3 3v10a3 3 0 0 0 3 3h10a3 3 0 0 0 3-3V7a3 3 0 0 0-3-3H7zm5 3.5A5.5 5.5 0 1 1 6.5 13 5.5 5.5 0 0 1 12 7.5zm0 2A3.5 3.5 0 1 0 15.5 13 3.5 3.5 0 0 0 12 9.5zm6.25-3.25a1.25 1.25 0 1 1-1.25 1.25 1.25 1.25 0 0 1 1.25-1.25z"/></svg>
              </a>
            {% endif %}
            {% if section.settings.facebook_url != blank %}
              <a href="{{ section.settings.facebook_url }}" class="footer__social-link" aria-label="Facebook" rel="noopener" target="_blank">
                <svg viewBox="0 0 24 24" aria-hidden="true"><path fill="currentColor" d="M13 22V12h3.5l.5-4H13V6.5C13 5.7 13.2 5 14.5 5H17V1h-3c-3 0-5 2-5 5v2H6v4h3v10h4z"/></svg>
              </a>
            {% endif %}
          </div>
        {% endif %}

        {% if section.settings.show_payment_icons %}
          <div class="footer__payment">
            {% for type in shop.enabled_payment_types %}
              <div class="footer__payment-icon">
                {{ type | payment_type_svg_tag }}
              </div>
            {% endfor %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</footer>

{% stylesheet %}
  .footer {
    width: 100%;
    background: #fff;
    color: #000;
    margin-top: 80px;
    padding: 40px 0 24px 0;
    border-top: 1px solid rgba(0,0,0,.15);
  }
  .footer__container {
    width: 100%;
    max-width: var(--content-width, calc(var(--page-width, 1280px) - var(--page-margin, 24px) * 2));
    margin: 0 auto;
    padding: 0;
    box-sizing: border-box;
  }
  .footer__top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-bottom: 16px;
    margin-bottom: 16px;
  }
  .footer__brand {
    display: flex;
    align-items: center;
  }
  .footer__logo {
    display: inline-block;
  }
  .footer__logo img {
    display: block;
    height: 55px;
    width: auto;
  }
  .footer__description {
    display: none;
  }
  .footer__links-grid {
    display: flex;
    gap: 32px;
    align-items: center;
    flex-wrap: wrap;
  }
  .footer__link {
    font-family: 'Poppins', var(--font-primary--family);
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: .02em;
    color: #000;
    text-decoration: none;
    transition: color .2s ease;
    white-space: nowrap;
  }
  .footer__link:hover {
    color: rgba(0,0,0,.6);
  }
  .footer__bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 24px;
  }
  .footer__copyright {
    margin: 0;
  }
  .footer__copyright p {
    margin: 0;
    font-size: 13px;
    color: rgba(0,0,0,.6);
    font-family: 'Poppins', var(--font-primary--family);
  }
  .footer__bottom-right {
    display: flex;
    align-items: center;
    gap: 32px;
  }
  .footer__social {
    display: flex;
    gap: 16px;
    align-items: center;
  }
  .footer__social-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    color: rgba(0,0,0,.7);
    text-decoration: none;
    transition: color .2s ease, transform .2s ease;
  }
  .footer__social-link:hover {
    color: #000;
    transform: translateY(-2px);
  }
  .footer__social-link svg {
    width: 20px;
    height: 20px;
    fill: currentColor;
  }
  .footer__payment {
    display: flex;
    gap: 12px;
    align-items: center;
    flex-wrap: wrap;
  }
  .footer__payment-icon {
    display: flex;
    align-items: center;
    opacity: .7;
    transition: opacity .2s ease;
  }
  .footer__payment-icon:hover {
    opacity: 1;
  }
  .footer__payment-icon svg {
    height: 24px;
    width: auto;
  }

  @media (max-width: 1023px) {
    .footer {
      padding: 32px 0 20px;
      margin-top: 60px;
    }
    .footer__container {
      padding: 0 var(--page-margin, 24px);
    }
    .footer__top {
      flex-direction: column;
      align-items: flex-start;
      gap: 20px;
      padding-bottom: 12px;
      margin-bottom: 12px;
    }
    .footer__links-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 16px;
      width: 100%;
    }
    .footer__bottom {
      flex-direction: column;
      align-items: flex-start;
      gap: 24px;
    }
    .footer__bottom-right {
      flex-direction: column;
      align-items: flex-start;
      gap: 24px;
      width: 100%;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.footer",
  "settings": [
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Premium quality products for your everyday needs."
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:labels.menu"
    },
    {
      "type": "header",
      "content": "Social Media"
    },
    {
      "type": "checkbox",
      "id": "show_social_icons",
      "label": "Show social icons",
      "default": true
    },
    {
      "type": "url",
      "id": "tiktok_url",
      "label": "TikTok URL"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook URL"
    },
    {
      "type": "header",
      "content": "Payment"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "t:labels.show_payment_icons",
      "default": true
    },
    {
      "type": "header",
      "content": "Copyright"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright text",
      "default": "All rights reserved.",
      "info": "Text to display after the copyright year and shop name"
    }
  ]
}
{% endschema %}
