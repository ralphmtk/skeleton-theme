  <div class="wholesale-benefits__image-top-right">
    <img
      src="{{ 'wholesale-benefits__top-right.png' | asset_url }}"
      alt="Decorative"
      loading="lazy"
    >
  </div>

  <!-- Bottom Left Image -->
  <div class="wholesale-benefits__image-bottom-left">
    <img
      src="{{ 'wholesale-benefits__bottom-left.png' | asset_url }}"
      alt="Decorative"
      loading="lazy"
    >
  </div>

  <!-- Bottom Right Blob Image -->
  <div class="wholesale-benefits__image-blob">
    <img
      src="{{ 'wholesale-benefits__blob.png' | asset_url }}"
