<section class="home-selling-points full-width" aria-label="Selling Points">
  {%- for block in section.blocks -%}
    {%- assign text_position = block.settings.text_position | default: 'left' -%}
    <div class="home-selling-points__panel home-selling-points__panel--{{ forloop.index }}{% if text_position == 'right' %} home-selling-points__panel--text-right{% elsif text_position == 'center' %} home-selling-points__panel--text-center{% endif %}" {{ block.shopify_attributes }}>
      <div class="home-selling-points__container">
        {%- if text_position == 'center' -%}
          <!-- Center layout with side videos -->
          <div class="home-selling-points__content">
            <div class="home-selling-points__text-box{% if block.settings.tilted_box %} home-selling-points__text-box--tilted{% endif %}">
              <div class="home-selling-points__text-box-inner{% if block.settings.tilted_box %} home-selling-points__text-box-inner--tilted{% endif %}">
                <h2 class="home-selling-points__heading">
                  {%- if block.settings.heading_line2 != blank -%}
                    <span class="home-selling-points__heading-line1{% if block.settings.heading_line1_small %} home-selling-points__heading-line1--small{% endif %}">{{ block.settings.heading }}</span>
                    <span class="home-selling-points__heading-line2">{{ block.settings.heading_line2 }}</span>
                  {%- else -%}
                    {{ block.settings.heading }}
                  {%- endif -%}
                </h2>

                {%- if block.settings.subheading != blank -%}
                  <p class="home-selling-points__subheading">{{ block.settings.subheading }}</p>
                {%- endif -%}

                {%- if block.settings.description != blank -%}
                  <p class="home-selling-points__description">{{ block.settings.description }}</p>
                {%- endif -%}
              </div>
            </div>
          </div>

          <!-- Side videos -->
          <div class="home-selling-points__side-videos">
            {%- if block.settings.video_left != blank -%}
              <video
                class="home-selling-points__video--left"
                muted
                playsinline
                preload="auto"
                aria-hidden="true"
                data-video-panel="{{ forloop.index }}"
                data-video-position="left"
              >
                <source src="{{ block.settings.video_left | asset_url }}" type="video/webm">
              </video>
            {%- endif -%}

            {%- if block.settings.video_right != blank -%}
              <video
                class="home-selling-points__video--right"
                muted
                playsinline
                preload="auto"
                aria-hidden="true"
                data-video-panel="{{ forloop.index }}"
                data-video-position="right"
              >
                <source src="{{ block.settings.video_right | asset_url }}" type="video/webm">
              </video>
            {%- endif -%}

            {%- if block.settings.video_top != blank -%}
              <video
                class="home-selling-points__video--top"
                muted
                playsinline
                preload="auto"
                aria-hidden="true"
                data-video-panel="{{ forloop.index }}"
                data-video-position="top"
              >
                <source src="{{ block.settings.video_top | asset_url }}" type="video/webm">
              </video>
            {%- endif -%}

            {%- if block.settings.video_bottom != blank -%}
              <video
                class="home-selling-points__video--bottom"
                muted
                playsinline
                preload="auto"
                aria-hidden="true"
                data-video-panel="{{ forloop.index }}"
                data-video-position="bottom"
              >
                <source src="{{ block.settings.video_bottom | asset_url }}" type="video/webm">
              </video>
            {%- endif -%}
          </div>
        {%- else -%}
          <!-- Standard side-by-side layout -->
          <!-- Text content -->
          <div class="home-selling-points__content">
            <div class="home-selling-points__text-box">
              <div class="home-selling-points__text-box-inner">
                <h2 class="home-selling-points__heading">
                  {%- if block.settings.heading_line2 != blank -%}
                    <span class="home-selling-points__heading-line1{% if block.settings.heading_line1_small %} home-selling-points__heading-line1--small{% endif %}">{{ block.settings.heading }}</span>
                    <span class="home-selling-points__heading-line2">{{ block.settings.heading_line2 }}</span>
                  {%- else -%}
                    {{ block.settings.heading }}
                  {%- endif -%}
                </h2>

                {%- if block.settings.subheading != blank -%}
                  <p class="home-selling-points__subheading">{{ block.settings.subheading }}</p>
                {%- endif -%}

                {%- if block.settings.description != blank -%}
                  <p class="home-selling-points__description">{{ block.settings.description }}</p>
                {%- endif -%}
              </div>
            </div>
          </div>

          <!-- Video -->
          {%- if block.settings.video != blank -%}
            <div class="home-selling-points__video-wrapper">
              <video
                class="home-selling-points__video"
                muted
                playsinline
                preload="auto"
                aria-hidden="true"
                data-video-panel="{{ forloop.index }}"
              >
                {%- assign video_file = block.settings.video -%}
                <source src="{{ video_file | asset_url }}" type="video/webm">
              </video>
            </div>
          {%- endif -%}
        {%- endif -%}
      </div>
    </div>
  {%- endfor -%}
</section>

{% stylesheet %}
.home-selling-points {
  width: 100%;
  position: relative;
}

.home-selling-points__panel {
  position: relative;
  width: 100%;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

