{% comment %}
  This section is used in the page template to render store pages like About us
  or Contact us.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/page
{% endcomment %}

<div class="page-wrapper">
  <div class="page-container">
    <h1 class="page-title">{{ page.title }}</h1>
    <div class="page-content rte">
      {{ page.content }}
    </div>
  </div>
</div>

{% stylesheet %}
  .page-wrapper {
    width: 100%; 
    max-width: 100%;
    overflow-x: hidden;
    box-sizing: border-box;
  }
  .page-container {
    padding: 0 var(--page-margin);
  }
  .page-title {
    margin: 0; 
    padding: 0; 
  }
  .page-content.rte > *:first-child {
    margin-top: 0;
  }
  .page-content.rte > *:last-child {
    margin-bottom: 0;
  }
  @media (max-width: 767px) {
    .page-wrapper {
      padding: 0 0 32px;
    }
    .page-title {
      padding-top: 24px;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.page",
  "settings": []
}
{% endschema %}
