<!-- GSAP & ScrollTrigger -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js" defer></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js" defer></script>

<script>
(function() {
  // Ensure page starts at top on load - run immediately
  window.scrollTo(0, 0);
  if (history.scrollRestoration) {
    history.scrollRestoration = 'manual';
  }

  // Force scroll to top again after a brief delay
  setTimeout(function() {
    window.scrollTo(0, 0);
  }, 0);

  function initWholesaleIntro() {
    // Wait for GSAP to load
    if (typeof gsap === 'undefined' || typeof ScrollTrigger === 'undefined') {
      setTimeout(initWholesaleIntro, 50);
      return;
    }

    gsap.registerPlugin(ScrollTrigger);

    var section = document.querySelector('.wholesale-intro');
    if (!section) return;

    var title = section.querySelector('.wholesale-intro__title');
    var textLines = section.querySelectorAll('.wholesale-intro__line');
    var subtitle = section.querySelector('.wholesale-intro__subtitle');
    var image = section.querySelector('.wholesale-intro__image');

    // Set initial states
    gsap.set(title, { opacity: 0, y: 40 });
    gsap.set(textLines, { opacity: 0, y: 30 });
    gsap.set(subtitle, { opacity: 0, y: 20 });
    gsap.set(image, { opacity: 0, x: 100 });

    // Create animation timeline
    var tl = gsap.timeline({
      scrollTrigger: {
        trigger: section,
        start: 'top 70%',
        end: 'bottom 30%',
        toggleActions: 'play none none reverse'
      }
    });

    // Animate elements in sequence
    tl.to(title, {
      opacity: 1,
      y: 0,
      duration: 0.8,
      ease: 'power2.out'
    })
    .to(textLines, {
      opacity: 1,
      y: 0,
      duration: 0.6,
      stagger: 0.15,
      ease: 'power2.out'
    }, '-=0.4')
    .to(subtitle, {
      opacity: 1,
      y: 0,
      duration: 0.6,
      ease: 'power2.out'
    }, '-=0.3')
    .to(image, {
      opacity: 1,
      x: 0,
      duration: 1,
      ease: 'power2.out'
    }, '-=0.8');

    // Handle resize
    var resizeTimeout;
    window.addEventListener('resize', function() {
      clearTimeout(resizeTimeout);
      resizeTimeout = setTimeout(function() {
        ScrollTrigger.refresh();
      }, 250);
    });
  }

  // Prevent scroll restoration
  window.addEventListener('beforeunload', function() {
    window.scrollTo(0, 0);
  });

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', function() {
      window.scrollTo(0, 0);
      initWholesaleIntro();
    });
  } else {
    window.scrollTo(0, 0);
    initWholesaleIntro();
  }
})();
</script>

