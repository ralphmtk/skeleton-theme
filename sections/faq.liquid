{%- comment -%}
  Creative FAQ page with animated accordions using brand colors (light blue and light pink)
{%- endcomment -%}

<section class="faq-page">
  <div class="faq-page__container">
    <div class="faq-page__header">
      <h1 class="faq-page__title">{{ page.title | default: 'Frequently Asked Questions' }}</h1>
      {% if page.content != blank %}
        <div class="faq-page__intro rte">
          {{ page.content }}
        </div>
      {% endif %}
    </div>

    <div class="faq-page__accordions">
      {% for block in section.blocks %}
        {% if block.type == 'faq_item' %}
          <div class="faq-accordion" {{ block.shopify_attributes }}>
            <button class="faq-accordion__trigger" aria-expanded="false" type="button">
              <span class="faq-accordion__number">{{ forloop.index | prepend: '0' | slice: -2, 2 }}</span>
              <span class="faq-accordion__question">{{ block.settings.question | default: 'Question goes here' }}</span>
              <span class="faq-accordion__icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <line x1="12" y1="5" x2="12" y2="19"></line>
                  <line x1="5" y1="12" x2="19" y2="12"></line>
                </svg>
              </span>
            </button>
            <div class="faq-accordion__content">
              <div class="faq-accordion__answer rte">
                {{ block.settings.answer | default: 'Answer goes here. This is where you provide detailed information to help your customers.' }}
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    {% if section.blocks.size == 0 %}
      <div class="faq-page__empty">
        <p>No FAQ items yet. Add FAQ items in the theme editor.</p>
      </div>
    {% endif %}
  </div>
</section>

{% stylesheet %}
  .faq-page {
    width: 100%;
    padding: 0;
    background: #fff;
    min-height: 60vh;
  }
  .faq-page__container {
    width: 100%;
    max-width: var(--content-width, calc(var(--page-width, 1280px) - var(--page-margin, 24px) * 2));
    margin: 0 auto;
    box-sizing: border-box;
    padding: 40px 0 80px;
    display: flex;
    flex-direction: column;
    gap: 40px;
  }
  .faq-page__header {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }
  .faq-page__title {
    margin: 0;
    padding: 0;
    font-family: var(--font-secondary--family);
    font-size: 36px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: #000;
  }
  .faq-page__intro {
    font-size: 16px;
    line-height: 1.7;
    color: #666;
  }
  .faq-page__intro.rte > *:first-child {
    margin-top: 0;
  }
  .faq-page__intro.rte > *:last-child {
    margin-bottom: 0;
  }
  .faq-page__accordions {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }
  .faq-accordion {
    background: #fff;
    border-radius: 8px;
    border: 1px solid #eee;
    overflow: hidden;
    transition: box-shadow .2s ease, border-color .2s ease;
  }
  .faq-accordion:hover {
    border-color: #ddd;
    box-shadow: 0 6px 18px rgba(0,0,0,.08);
  }
  .faq-accordion.is-open {
    border-color: #000;
    box-shadow: 0 8px 24px rgba(0,0,0,.12);
  }
  .faq-accordion__trigger {
    width: 100%;
    display: flex;
    align-items: center;
    gap: 20px;
    padding: 24px 28px;
    background: transparent;
    border: none;
    text-align: left;
    cursor: pointer;
    font-family: var(--font-secondary--family);
    transition: background-color .2s ease;
    position: relative;
  }
  .faq-accordion__trigger:hover {
    background: #f8f8f8;
  }
  .faq-accordion__number {
    font-size: 18px;
    font-weight: 600;
    color: rgba(0,0,0,.6);
    min-width: 42px;
    text-align: center;
    letter-spacing: 0.3px;
  }
  .faq-accordion.is-open .faq-accordion__number {
    color: #000;
  }
  .faq-accordion__question {
    flex: 1;
    font-size: 18px;
    font-weight: 600;
    color: #000;
    line-height: 1.4;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  .faq-accordion__icon {
    width: 28px;
    height: 28px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    border: 2px solid #000;
    color: #000;
    flex-shrink: 0;
    transition: background .2s ease, color .2s ease;
  }
  .faq-accordion__icon svg {
    width: 14px;
    height: 14px;
    transition: transform .2s ease;
  }
  .faq-accordion.is-open .faq-accordion__icon {
    background: #000;
    color: #fff;
  }
  .faq-accordion__content {
    max-height: 0;
    overflow: hidden;
    transition: max-height .35s cubic-bezier(0.4, 0, 0.2, 1), padding .3s ease;
    padding: 0 28px;
  }
  .faq-accordion.is-open .faq-accordion__content {
    max-height: 600px;
    padding: 0 28px 24px;
  }
  .faq-accordion__answer {
    padding-top: 8px;
    font-size: 16px;
    line-height: 1.7;
    color: #444;
  }
  .faq-accordion__answer p {
    margin: 0 0 16px;
  }
  .faq-accordion__answer p:last-child {
    margin-bottom: 0;
  }
  .faq-page__empty {
    text-align: center;
    padding: 48px 20px;
    color: rgba(0,0,0,.5);
    font-size: 16px;
    border: 1px dashed rgba(0,0,0,.2);
    border-radius: 8px;
  }

  @media (max-width: 1023px) {
    .faq-page__container {
      padding: 32px 16px 60px;
    }
    .faq-accordion__trigger {
      padding: 20px 20px;
      gap: 16px;
    }
    .faq-accordion__question {
      font-size: 16px;
    }
    .faq-accordion__content {
      padding: 0 20px;
    }
    .faq-accordion.is-open .faq-accordion__content {
      padding: 0 20px 20px;
    }
  }

  @media (max-width: 767px) {
    .faq-page__title {
      font-size: 28px;
    }
    .faq-accordion__number {
      display: none;
    }
    .faq-accordion__question {
      text-transform: none;
      letter-spacing: 0.2px;
    }
  }
{% endstylesheet %}

<script>
  (function() {
    var accordions = document.querySelectorAll('.faq-accordion');
    
    accordions.forEach(function(accordion) {
      var trigger = accordion.querySelector('.faq-accordion__trigger');
      if (!trigger) return;
      
      trigger.addEventListener('click', function() {
        var isOpen = accordion.classList.contains('is-open');
        var wasOpen = isOpen;
        
        // Close all other accordions (only one open at a time)
        accordions.forEach(function(other) {
          if (other !== accordion) {
            other.classList.remove('is-open');
            other.querySelector('.faq-accordion__trigger').setAttribute('aria-expanded', 'false');
          }
        });
        
        // Toggle current accordion
        if (wasOpen) {
          accordion.classList.remove('is-open');
          trigger.setAttribute('aria-expanded', 'false');
        } else {
          accordion.classList.add('is-open');
          trigger.setAttribute('aria-expanded', 'true');
        }
      });
    });
  })();
</script>

