<!-- GSAP & ScrollTrigger -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js" defer></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js" defer></script>

<script>
(function() {
  function initWholesaleAssortment() {
    if (typeof gsap === 'undefined' || typeof ScrollTrigger === 'undefined') {
      setTimeout(initWholesaleAssortment, 50);
      return;
    }

    gsap.registerPlugin(ScrollTrigger);

    var section = document.querySelector('.wholesale-assortment');
    if (!section) return;

    var header = section.querySelector('.wholesale-assortment__header');
    var columns = section.querySelectorAll('.wholesale-assortment__column');

    // Main timeline for header
    var tl = gsap.timeline({
      scrollTrigger: {
        trigger: section,
        start: 'top 60%',
        toggleActions: 'play none none reverse'
      }
    });

    // Animate header
    if (header) {
      tl.to(header, {
        opacity: 1,
        y: 0,
        duration: 0.8,
        ease: 'power2.out'
      });
    }

    // Animate columns with stagger
    if (columns.length > 0) {
      columns.forEach(function(column, index) {
        var products = column.querySelectorAll('.wholesale-assortment__product-item');

        var columnTl = gsap.timeline({
          scrollTrigger: {
            trigger: column,
            start: 'top 80%',
            toggleActions: 'play none none reverse'
          }
        });

        // Animate column container
        columnTl.to(column, {
          opacity: 1,
          y: 0,
          duration: 0.6,
          ease: 'power2.out'
        });

        // Animate products in cascade
        if (products.length > 0) {
          products.forEach(function(product, pIndex) {
            var xOffset = '0%';
            var targetScale = 1;

            // Premium (column 2): items 1-2 are scaled to 85%
            if (index === 1 && (pIndex === 0 || pIndex === 1)) {
              targetScale = 0.85;
            }

            columnTl.to(product, {
              opacity: 1,
              scale: targetScale,
              y: 0,
              x: xOffset,
              duration: 0.5,
              ease: 'back.out(1.2)'
            }, '-=' + (pIndex === 0 ? 0.3 : 0.4));
          });
        }
      });
    }

    // Handle resize
    var resizeTimeout;
    window.addEventListener('resize', function() {
      clearTimeout(resizeTimeout);
      resizeTimeout = setTimeout(function() {
        ScrollTrigger.refresh();
      }, 250);
    });
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initWholesaleAssortment);
  } else {
    initWholesaleAssortment();
  }
})();
</script>

