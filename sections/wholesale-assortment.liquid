<section class="wholesale-assortment full-width" aria-label="Wholesale Assortment">
  <div class="wholesale-assortment__container">
    <!-- Header -->
    <div class="wholesale-assortment__header">
      {% render 'wholesale-section-header',
        crossed_text: section.settings.crossed_text,
        title: section.settings.title,
        title_color: '#e91e63'
      %}
    </div>

    <!-- Product Categories Grid -->
    <div class="wholesale-assortment__grid">
      {%- assign categories = 'essentials,premium,alternative,adventure,home,limited' | split: ',' -%}
      {%- assign category_names = 'Essentials,Premium,Alternative,Adventure,Home Essentials,Limited Edition' | split: ',' -%}
      {%- assign image_counts = '3,4,3,2,5,6' | split: ',' -%}

      {%- for category in categories -%}
        {%- assign index = forloop.index0 -%}
        {%- assign count = image_counts[index] | plus: 0 -%}
        <div class="wholesale-assortment__column">
          <h3 class="wholesale-assortment__category-title">
            {{ category_names[index] }}
          </h3>

          <div class="wholesale-assortment__products">
            {%- for i in (1..count) -%}
              <div class="wholesale-assortment__product-item wholesale-assortment__product-item--{{ i }}">
                <img
                  src="{{ 'wholesale_' | append: category | append: '_' | append: i | append: '.png' | asset_url }}"
                  alt="{{ category_names[index] }} Product {{ i }}"
                  loading="lazy"
                >
              </div>
            {%- endfor -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% stylesheet %}
.wholesale-assortment {
  width: 100%;
  min-height: 100vh;
  background: #1a1a3e;
  padding: 80px 40px 120px;
  box-sizing: border-box;
  margin: 0;
}

.wholesale-assortment__container {
  width: 100%;
  max-width: 1600px;
  margin: 0 auto;
}

.wholesale-assortment__header {
  opacity: 0;
  transform: translateY(30px);
  margin-bottom: 80px;
}

/* Grid Layout */
.wholesale-assortment__grid {
  display: grid;
  grid-template-columns: repeat(6, 1fr);
  gap: 60px;
  position: relative;
}

/* Column Divider Lines */
.wholesale-assortment__column:not(:last-child)::after {
  content: '';
  position: absolute;
  right: -30px;
  top: 80px;
  bottom: 0;
  width: 1px;
  background: linear-gradient(to bottom, transparent, rgba(255, 255, 255, 0.15) 10%, rgba(255, 255, 255, 0.15) 90%, transparent);
}

/* Column Styling */
.wholesale-assortment__column {
  opacity: 0;
  transform: translateY(50px);
  position: relative;
}

.wholesale-assortment__category-title {
  font-size: 20px;
  font-weight: 800;
  color: #ffffff;
  text-align: center;
  margin: 0 0 40px 0;
  font-family: 'Exo', sans-serif;
  letter-spacing: 1px;
  line-height: 1.3;
  min-height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* Products Container with Varied Layout */
.wholesale-assortment__products {
  position: relative;
  min-height: 600px;
  font-size: 0; /* Remove whitespace between inline-block elements */
}

/* Product Items - No Borders, Varied Sizes & Positions */
.wholesale-assortment__product-item {
  position: relative;
  transition: all 0.4s ease;
  opacity: 0;
  transform: scale(0.9) translateY(20px);
}

