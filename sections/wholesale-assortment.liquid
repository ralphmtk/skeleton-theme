  .wholesale-assortment {
    padding: 60px 24px 80px;
  }

  .wholesale-assortment__header {
    margin-bottom: 60px;
  }

  .wholesale-assortment__grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 40px;
